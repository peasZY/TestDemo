<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        style="@style/tk_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/tk_white">
        <TextView
            android:id="@+id/tv_selected_member"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:textSize="14sp"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/bs_list_item_selector"
            android:textColor="@color/bs_title_left_color_blue"
            android:drawableRight="@drawable/tk_icon_right_arrow_blue"
            android:drawablePadding="6dp"
            android:text="@string/tk_selected_member"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/btn_go_meeting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="140dp"
            android:text="@string/tk_meeting_go"
            android:textSize="17sp"
            android:textColor="@color/tk_white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:background="@drawable/tk_bg_btn_blue"
            android:clickable="true"
            />
    </LinearLayout>
</LinearLayout>